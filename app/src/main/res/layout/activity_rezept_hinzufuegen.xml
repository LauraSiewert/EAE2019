<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RezeptHinzufuegen"
    android:background="@android:color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <ImageView
            android:id="@+id/FOTO"
            android:contentDescription="@string/FotoB"
            android:src="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
       />
        <Button
            android:id="@+id/B_FOTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FotoB"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:stateListAnimator="@null"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:stretchColumns="*">
            <TableRow android:layout_width="0dp">
                <Spinner
                    android:id="@+id/MAIN_SPINNER2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                <Spinner
                    android:id="@+id/SUB_SPINNER2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NameR"
                android:textSize="19sp"/>
            <EditText
                android:id="@+id/NAME_EDITTEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="17sp"
                android:hint="@string/NameRHint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ZeitR"
                android:textSize="19sp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <TableRow>
                    <EditText
                        android:id="@+id/ZEIT_EDITTEXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textSize="17sp"
                        android:hint="@string/ZeitRHint"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ZeitEinheit"
                        android:paddingLeft="15dp"
                        android:textSize="19sp"/>
                    </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addZutat"
                        android:textSize="19sp" />

                    <ImageButton
                        android:id="@+id/ZUTAT_B"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/plusround" />
                </TableRow>
            </TableLayout>
            <ListView
                android:id="@+id/ZUTATEN_LISTE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SchwierigkeitR"
                android:textSize="19sp" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <SeekBar
                        android:id="@+id/SCHWIERIGKEITSGRAD"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:max="2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/GRAD_TEXT"/>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BewertungR"
                android:textSize="19sp" />
            <RatingBar
                android:id="@+id/BEWERRTUNG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/VorgehenR"
                android:textSize="19sp"/>
            <EditText
                android:id="@+id/VORGEHENSWEISE_EDITTEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="@string/VorgehenRHint"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:stretchColumns="*">
            <TableRow android:layout_width="0dp">
                <Button
                    android:id="@+id/CANCEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/abbrechen"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:stateListAnimator="@null"/>
                <Button
                    android:id="@+id/OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:stateListAnimator="@null"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
